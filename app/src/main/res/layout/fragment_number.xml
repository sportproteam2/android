<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".NumberFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/linearLayoutNumber"
        android:layout_width="wrap_content"
        android:layout_height="311dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:background="@drawable/corner_radius_linera_layout"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="23dp"
            android:text="ВХОД"
            android:textAppearance="@style/some_id"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Телефон"
            android:textAppearance="@style/some_id"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/editTextTextPersonCode"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint=" +996(xxx) xx xx xx"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="381dp" />

        <View
            android:id="@+id/rectangle_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle_3" />

        <Button
            android:id="@+id/buttonNum"
            android:layout_width="280dp"
            android:layout_height="51dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/button"
            android:text="ВОЙТИ" />
    </LinearLayout>

</FrameLayout>