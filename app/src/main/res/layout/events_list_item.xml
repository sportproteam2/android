<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="16dp"
    android:gravity="center">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient" />

    <ImageView
        android:id="@+id/IBAllCom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tvTypeOfSport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/IBAllCom"
        android:layout_alignTop="@id/IBAllCom"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corner_for_text"
        android:fontFamily="@font/oswald"
        android:text="ДЗЮДО"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvStatusOpenOrNot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/IBAllCom"
        android:layout_alignEnd="@id/IBAllCom"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_corner_for_text"
        android:backgroundTint="#219653"
        android:fontFamily="@font/oswald"
        android:text="РЕГИСТРАЦИЯ ОТКРЫТА"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView


        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/IBAllCom"
        android:layout_alignBottom="@id/IBAllCom"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/oswald"
        android:text="Открытое первенство по Дзюдо"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvStartData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/IBAllCom"
        android:layout_alignBottom="@id/IBAllCom"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/oswald"
        android:text="01.01.2021"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView

        android:id="@+id/tvEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/IBAllCom"
        android:layout_alignBottom="@id/IBAllCom"
        android:layout_marginStart="95dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/oswald"
        android:text="12.01.2021"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <View
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignStart="@id/IBAllCom"
        android:layout_alignBottom="@id/IBAllCom"
        android:layout_marginStart="83dp"
        android:layout_marginTop="136dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rectangle" />

</RelativeLayout>