<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.fragments.auth.ProfileFragment">

    <LinearLayout
        android:id="@+id/linearLayoutFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewIntoLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="35dp"
            android:text="ВОЙТИ КАК"
            android:textAppearance="@style/some_id"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/linearLayoutImagButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonJudge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_frame_1119"
                 />

            <View
                android:layout_width="34dp"
                android:layout_height="50dp" />

            <ImageButton
                android:id="@+id/imageButtonTrainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_djudge_2" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/testButtonToMain"
                android:layout_width="0dp"
                android:textSize="12dp"
                android:layout_height="44dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button"
                android:text="Tr.Profile" />

            <Button
                android:id="@+id/testButtonToRegistration"
                android:layout_width="0dp"
                android:textSize="12dp"
                android:backgroundTint="@color/button"
                android:layout_height="44dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Registration" />
        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>