<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/layout_register"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background"
android:fillViewport="true"
tools:context=".ui.fragments.auth.RegisterFragment">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="168dp"
            android:layout_height="47dp"
            android:src="@drawable/ic_logo_without_text" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="38dp"
            android:fontFamily="@font/oswald"
            android:text="Регистрация"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/corner_radius_linera_layout"
        android:orientation="vertical"
        android:padding="24dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/oswald"
            android:text="Имя*"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:fontFamily="@font/oswald"
            android:hint="@string/what_is_your_name"
            android:inputType="textCapSentences"
            android:paddingStart="16dp"
            android:textColorHint="#898989"
            android:textSize="16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/oswald"
            android:text="Фамилия*"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:fontFamily="@font/oswald"
            android:hint="Ваша фамилия"
            android:inputType="textCapSentences"
            android:paddingStart="16dp"
            android:textColorHint="#898989"
            android:textSize="16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/oswald"
            android:text="Отчество*"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextMiddleName"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:fontFamily="@font/oswald"
            android:hint="Ваше отчество"
            android:inputType="textCapSentences"
            android:paddingStart="16dp"
            android:textColorHint="#898989"
            android:textSize="16sp" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/oswald"
            android:text="Область*"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextRegion"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="280dp"
            android:layout_height="match_parent">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edit_text_border"
                android:fontFamily="@font/oswald"
                android:hint="Какую область представляете?"
                android:textColor="#898989" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/oswald"
            android:text="Вид спорта *"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextSportLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="280dp"
            android:layout_height="match_parent">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteSport"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edit_text_border"
                android:fontFamily="@font/oswald"
                android:hint="Выберите вид спорта"
                android:textColor="#898989"


                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/oswald"
            android:text="Организация *"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextOrganization"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:fontFamily="@font/oswald"
            android:hint="Из какой вы организации?"
            android:inputType="textCapSentences"
            android:paddingStart="16dp"
            android:textColorHint="#898989"
            android:textSize="16sp" />





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/oswald"
            android:text="*Вставьте ссылку документа, подтверждающий вашу квалификацию тренера"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextDocument"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:fontFamily="@font/oswald"
            android:hint="Ваша ссылка документа"
            android:inputType="text"
            android:paddingStart="16dp"
            android:textColorHint="#898989"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/oswald"
            android:text="*Фотография"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/editTextPhoto"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:fontFamily="@font/oswald"
            android:hint="Ваша ссылка на фото"
            android:inputType="text"
            android:paddingStart="16dp"
            android:textColorHint="#898989"
            android:textSize="16sp" />


        <Button
            android:id="@+id/bt_register"
            android:layout_width="280dp"
            android:layout_height="54dp"

            android:layout_marginBottom="38dp"
            android:backgroundTint="@color/button"
            android:text="зарегистрироваться"
            android:textAllCaps="true" />
    </LinearLayout>


</LinearLayout>


</ScrollView>