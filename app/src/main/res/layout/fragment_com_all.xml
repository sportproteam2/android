            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_for_text"
            android:fontFamily="@font/oswald"
            android:text="ДЗЮДО"
            android:textColor="@color/white"


            />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
