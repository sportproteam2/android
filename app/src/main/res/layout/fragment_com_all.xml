<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ComAllFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageViewCom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/competition_image"
             />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageViewCom"
            android:layout_alignTop="@id/imageViewCom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_for_text"
            android:fontFamily="@font/oswald"
            android:text="ДЗЮДО"
            android:textColor="@color/white"


            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageViewCom"
            android:layout_alignEnd="@id/imageViewCom"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"

            android:background="@drawable/rounded_corner_for_text"
            android:backgroundTint="#219653"
            android:fontFamily="@font/oswald"
            android:text="РЕГИСТРАЦИЯ ОТКРЫТА"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView


            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageViewCom"

            android:layout_alignBottom="@id/imageViewCom"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="36dp"

            android:fontFamily="@font/oswald"
            android:text="Открытое первенство по Дзюдо"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageViewCom"

            android:layout_alignBottom="@id/imageViewCom"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/oswald"
            android:text="01.01.2021"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView

            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageViewCom"

            android:layout_alignBottom="@id/imageViewCom"
            android:layout_marginStart="95dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/oswald"
            android:text="12.01.2021"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignStart="@id/imageViewCom"
            android:layout_alignBottom="@id/imageViewCom"

            android:layout_marginStart="83dp"
            android:layout_marginTop="136dp"
            android:layout_marginBottom="25dp"

            android:background="@drawable/rectangle" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageViewCom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/competition_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageViewCom1"
            android:layout_alignTop="@id/imageViewCom1"
