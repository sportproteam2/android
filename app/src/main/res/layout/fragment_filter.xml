<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sportTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/oswald"
        android:text="@string/sport_types"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

            <ImageButton
                android:id="@+id/national"
                android:layout_width="@dimen/sport_type_width"
                android:layout_height="@dimen/sport_type_height"
                android:src="@drawable/national" />

            <View
                android:layout_width="@dimen/sport_type_width"
                android:layout_height="@dimen/sport_type_height"
                android:background="@drawable/gradient" />


            <TextView
                android:id="@+id/textNational"
                android:layout_width="@dimen/sport_type_width"
                android:layout_height="@dimen/sport_type_height"
                android:clickable="false"
                android:fontFamily="@font/oswald"
                android:gravity="bottom"
                android:letterSpacing="0.05"
                android:padding="8dp"
                android:text="@string/national"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="135dp"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="95dp"
                android:background="#ffffff" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

            <ImageButton
                android:id="@+id/olympic"
                android:layout_width="@dimen/sport_type_width"
                android:layout_height="@dimen/sport_type_height"
                android:layout_alignParentEnd="true"
                android:src="@drawable/olympic" />

            <View
                android:layout_width="@dimen/sport_type_width"
                android:layout_height="@dimen/sport_type_height"
                android:layout_alignParentEnd="true"
                android:background="@drawable/gradient" />

            <TextView
                android:id="@+id/textOlympic"
                android:layout_width="@dimen/sport_type_width"
                android:layout_height="@dimen/sport_type_height"
                android:layout_alignParentEnd="true"
                android:clickable="false"
                android:fontFamily="@font/oswald"
                android:gravity="bottom"
                android:letterSpacing="0.05"
                android:padding="8dp"
                android:text="@string/olympic"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

                <View
                    android:layout_width="135dp"
                    android:layout_height="1dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="8dp"
                    android:background="#ffffff" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/third"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

            <ImageButton
                android:id="@+id/nonOlympic"
                android:layout_width="@dimen/sport_type_width"
                android:layout_height="@dimen/sport_type_height"
                android:src="@drawable/non_olympic" />

            <View
                android:layout_width="@dimen/sport_type_width"
                android:layout_height="@dimen/sport_type_height"
                android:background="@drawable/gradient" />

            <TextView
                android:id="@+id/textNonOlympic"
                android:layout_width="@dimen/sport_type_width"
                android:layout_height="@dimen/sport_type_height"
                android:clickable="false"
                android:fontFamily="@font/oswald"
                android:gravity="bottom"
                android:letterSpacing="0.05"
                android:padding="8dp"
                android:text="@string/nonOlympic"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="135dp"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="95dp"
                android:background="#ffffff" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fourth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

            <ImageButton
                android:id="@+id/paraOlympic"
                android:layout_width="@dimen/sport_type_width"
                android:layout_height="@dimen/sport_type_height"
                android:layout_alignParentEnd="true"
                android:src="@drawable/para_olympic" />

            <View
                android:layout_width="@dimen/sport_type_width"
                android:layout_height="@dimen/sport_type_height"
                android:layout_alignParentEnd="true"
                android:background="@drawable/gradient" />

            <TextView
                android:id="@+id/textParaOlympic"
                android:layout_width="@dimen/sport_type_width"
                android:layout_height="@dimen/sport_type_height"
                android:layout_alignParentEnd="true"
                android:clickable="false"
                android:fontFamily="@font/oswald"
                android:gravity="bottom"
                android:letterSpacing="0.05"
                android:padding="8dp"
                android:text="@string/paraOlympic"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="135dp"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="95dp"
                android:layout_marginStart="8dp"
                android:background="#ffffff" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>