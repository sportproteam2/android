<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.fragments.auth.CodeFragment">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_back" />

    <LinearLayout
        android:id="@+id/linearLayoutCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/corner_radius_linera_layout"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="visible"
       >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="23dp"

            android:textAppearance="@style/some_id"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Код подтверждения"
            android:textAppearance="@style/some_id"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextPersonalCode"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:padding="8dp"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="381dp"
            android:autofillHints="" />



        <Button
            android:id="@+id/buttonCode"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/button"
            android:text="подтвердить"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="445dp" />

        <Button
            android:id="@+id/buttonCode1"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#80000000"
            android:text="Запросить еще раз"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="445dp" />
    </LinearLayout>


</FrameLayout>