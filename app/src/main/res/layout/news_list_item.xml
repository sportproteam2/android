<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/newsCover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient"
            tools:ignore="RtlSymmetry" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newsCategory"
                android:layout_width="75dp"
                android:layout_height="23dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_sport"
                android:fontFamily="@font/oswald"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="normal"
                tools:ignore="RtlSymmetry"
                tools:text="Баскетбол" />

            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:textStyle="normal"
                android:textSize="18sp"
                android:fontFamily="@font/oswald"
                android:textColor="@color/white"
                tools:text="Баер снизит стоимость Кая Хаверца"
                android:layout_above="@id/newsDate"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/newsDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="@font/oswald"
                android:textColor="#B8B8B8"
                tools:text="01.06.2021"
                android:layout_alignParentBottom="true"
                tools:ignore="RtlSymmetry" />

        </RelativeLayout>

</RelativeLayout>